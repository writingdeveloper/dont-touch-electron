{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.donttouch.app",
  "productName": "Don't Touch",
  "icon": "public/icon.ico",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "publish": {
    "provider": "github",
    "owner": "writingdeveloper",
    "repo": "dont-touch-electron",
    "releaseType": "release"
  },
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "icon": "public/icon.png",
    "artifactName": "DontTouch-${version}-mac.${ext}",
    "target": [
      "dmg"
    ],
    "category": "public.app-category.healthcare-fitness"
  },
  "dmg": {
    "artifactName": "DontTouch-${version}-mac.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "DontTouch-${version}-win-setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "shortcutName": "Don't Touch",
    "artifactName": "DontTouch-${version}-win-setup.${ext}"
  },
  "linux": {
    "icon": "public/icon.png",
    "artifactName": "DontTouch-${version}-linux.${ext}",
    "target": ["AppImage"],
    "category": "Utility"
  }
}
